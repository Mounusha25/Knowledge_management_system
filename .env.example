# =============================================================================
# RAG Knowledge Management System - Environment Configuration Example
# =============================================================================
# 
# INSTRUCTIONS:
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual values below
# 3. NEVER commit the .env file to version control
# 
# =============================================================================

# =============================================================================
# Flask Application Configuration
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=false
SECRET_KEY=your-super-secret-flask-key-generate-with-secrets-module
PORT=8080
HOST=0.0.0.0

# =============================================================================
# AI/ML Model Configuration
# =============================================================================
# Ollama LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
LLM_TIMEOUT=60

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# Vector Database Configuration
# =============================================================================
VECTOR_DB_PATH=./data/vector_db
COLLECTION_NAME=documents

# =============================================================================
# Document Processing Configuration
# =============================================================================
# Chunking Strategy
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CHUNKING_STRATEGY=hybrid

# File Upload Limits
MAX_FILE_SIZE_MB=10
MAX_CONCURRENT_UPLOADS=3

# Supported File Types (comma-separated)
ALLOWED_EXTENSIONS=pdf,txt,md,docx

# =============================================================================
# Performance & Optimization
# =============================================================================
# Caching Configuration
ENABLE_QUERY_CACHE=true
CACHE_TTL_SECONDS=3600

# Query Processing
QUERY_TIMEOUT=60
TOP_K_RETRIEVAL=7
SIMILARITY_THRESHOLD=0.15
MAX_CONTEXT_LENGTH=3000

# =============================================================================
# Security & Rate Limiting
# =============================================================================
# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Security Settings
ENABLE_CORS=true
MAX_CONTENT_LENGTH=10485760

# =============================================================================
# Cloud Storage (AWS S3) - Optional
# =============================================================================
# AWS Configuration (leave empty to use local storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_NAME=your-rag-documents-bucket
S3_REGION=us-east-1
ENABLE_S3_STORAGE=false

# =============================================================================
# Logging & Monitoring
# =============================================================================
# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
ENABLE_FILE_LOGGING=true
LOG_FILE_PATH=./logs/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics

# =============================================================================
# Development & Debug Settings
# =============================================================================
# Development Features
ENABLE_DEBUG_ROUTES=false
ENABLE_PERFORMANCE_PROFILING=false
DEBUG_SIMILARITY_SEARCH=false

# Testing Configuration
ENABLE_TEST_MODE=false
TEST_DOCUMENTS_PATH=./app/test_data/

# =============================================================================
# Production Deployment (Optional)
# =============================================================================
# Production Settings
WORKERS=4
THREADS=2
TIMEOUT=30
KEEP_ALIVE=2

# SSL/TLS (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=
FORCE_HTTPS=false

# =============================================================================
# External Integrations (Optional)
# =============================================================================
# Redis Cache (if using external Redis)
REDIS_URL=redis://localhost:6379/0
ENABLE_REDIS_CACHE=false

# Database (if using external database)
DATABASE_URL=sqlite:///./data/app.db
ENABLE_EXTERNAL_DB=false

# =============================================================================
# IMPORTANT SECURITY NOTES:
# =============================================================================
# 1. Generate a strong SECRET_KEY using: python -c "import secrets; print(secrets.token_hex(32))"
# 2. Use environment-specific values for production
# 3. Never commit the actual .env file to version control
# 4. Consider using a secrets management service for production
# 5. Regularly rotate API keys and secrets
# =============================================================================
